/* pages/shopkeeperLevelProcess/mylevel/mylevel.wxss */

page {
  min-height: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  overflow: hidden;
}
.mylevel{
  margin-bottom: 44rpx;
}
.mylevel_content {
  width: 100%;
  padding: 22rpx 32rpx 0;
  height: 570rpx;
  margin-left: -32rpx;
  background-color: #ffffff;
  position: relative;
}
.img_bg_l{
    width: 308rpx;
    height: 308rpx;
    position: absolute;
    left: -72rpx;
    top: 188rpx;
}

.img_bg_r{
    width: 462rpx;
    height: 462rpx;
    position: absolute;
    top: -80rpx;
    right: -84rpx;
}

.mylevel_content_img {
  width: 254rpx;
  height: 254rpx;
  margin: 0 auto;
}

.mylevel_content_text {
  width: 200rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 20rpx auto 0;

  /* text-align: center; */

  /* 内容文字 */
  color: #4A4A4A;
}

.mylevel_content_text2 {
  font-size: 32rpx;
  line-height: 40rpx;

  /* identical to box height, or 125% */
  /* text-align: center; */

  /* 夏天橙色 */
  color: #FF5E00;


}

.mylevel_content_progress {
  width: 100%;
  margin-top: 76rpx;
}

.mylevel_content_progressstatic {
  border-radius: 8rpx;
  height: 16rpx;
  overflow: hidden;
}

.mylevel_content_progressl {
  position: relative;
  width: 96%;
  height: 40rpx;
  margin-left: 2%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 34rpx;

  /* identical to box height */
  /* text-align: center; */

  /* 不重要文字 */
  /* color: #A6A6A6; */

  mix-blend-mode: normal;
  opacity: 0.9;
}

.mylevel_content_progresstext_active {
  color: white;
}

.mylevel_content_progressimg {
  width: 40rpx;
  height: 40rpx;
  background-color: #FF5E00;
  margin-left: -20rpx;
  border-radius: 4rpx;
  position: absolute;
}

.mylevel_content_progresstext,
.mylevel_content_progresstext_active {
  position: absolute;
  z-index: 10;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: -20rpx;
  text-align: center;
  display: block;
  font-size: 28rpx;

}

.mylevel_content_text1 {
  font-size: 24rpx;
  overflow: hidden;
  line-height: 34rpx;

  /* identical to box height */
  text-align: left;
  margin-top: 36rpx;
  /* 辅助文字 */
  color: #7F7F7F;

  mix-blend-mode: normal;
  opacity: 0.9;
}

.mylevel_content1 {
  margin-top: 80rpx;
}

.mylevel_content1_text {
  font-weight: 600;
  font-size: 40rpx;
  line-height: 56rpx;

  /* identical to box height */
  margin-left: 36rpx;
  color: #404040;
}

.mylevel_content1_box {
  width: 100%;
  height: 160rpx;

  background: #FFFFFF;
  border-radius: 16rpx;
  margin-top: 32rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.mylevel_content1_box_item {
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.mylevel_content1_box_item_circle {
  width: 8rpx;
  height: 8rpx;
  background-color: #A6A6A6;
  border-radius: 50%;
}

.mylevel_content1_text1 {
  margin-left: 16rpx;
  font-size: 28rpx;

  /* identical to box height */

  /* 内容文字 */
  color: #4A4A4A;

  opacity: 0.9;

}

.mylevel_content2 {
  width: 100%;
  height: 104rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  padding: 32rpx;
  box-sizing: border-box;
  margin-top: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mylevel_content2_text {
  font-size: 28rpx;
 
  color: #4A4A4A;
}
.mylevel_content2_arrow{
  color: #B3B3B3;
  width: 14rpx;
  height: 26rpx;
  color: rgba(0, 0, 0, 0.9);
}