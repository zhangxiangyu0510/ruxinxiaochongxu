}
.userAnalysis{
  margin:40rpx 32rpx;
}
.date{
  display: flex;
  vertical-align: bottom;
}
.chart{
  position: relative;
}
.chart .text{
  position: absolute;
  top:47%;
  left:47%;
  line-height:30rpx;
}
.month{
  padding: 12rpx 20rpx;
  /* background: rgba(115, 64, 179, 0.1); */
  border-radius: 8rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  text-align: center;

/* identical to box height, or 150% */


