/* packageRecommend/pages/commodityAnalysisPages/commodityAnalysis/commodityAnalysis.wxss */
.commodityAnalysis{
    font-family: 'PingFang SC';
    font-style: normal;
    padding: 49rpx 32rpx 0;
    background-color: #fafafa;
}
.commodity-header{
    display: flex;
    justify-content: space-between;
   margin-bottom: 32rpx;
}
.commodity-header .header-left{
    display: flex;
    align-items: flex-end;
}
.commodity-header .header-left .change-date{
    width: 156rpx;
    height: 60rpx;
    background: #7340B3;
    border-radius: 8rpx;
    text-align: center;
    margin-right: 16rpx;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #FFFFFF;

}
.commodity-header .header-left .date-text{
    font-weight: 300;
    font-size: 24rpx;
    line-height: 34rpx;
    text-align: right;
    color: #4A4A4A;

}
.header-right{
    width: 136rpx;
    height: 60rpx;
    background: rgba(122, 74, 183, 0.1);
    border-radius: 8rpx;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #7340B3;
    text-align: center;
}
.commodity-sales{
    margin-bottom: 64rpx;
}
.commodity-sales .sales-text{
    font-weight: 600;
    font-size: 40rpx;
    line-height: 56rpx;
    color: #404040;
    margin-bottom: 32rpx;
}
.commodity-sales .sales-content{
    box-sizing: border-box;
    width: 100%;
    background: #FFFFFF;
    border-radius: 16rpx;
    padding: 32rpx;
}
.commodity-sales .sales-content .number-sales{
    box-sizing: border-box;
    margin-bottom: 32rpx;
}
.commodity-sales .sales-content .number-sales .number-text{
    font-weight: 400;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #808080;
}
.commodity-sales .sales-content .number-sales .number{
    font-weight: 700;
    font-size: 72rpx;
    line-height: 72rpx;
    color: #7A4AB7;
}
.commodity-sales .sales-content .sales-chart{
    width: 100%;
    height: 600rpx;
    /* background-color: #7A4AB7; */
}
.sales-chart canvas{
    width: 100%;
    height: 100%;
}
.commodity-sort .sort-title{
    display: flex;
    margin-bottom: 48rpx;
}
.commodity-sort .sort-title .sort-title-type{
    margin-right: 48rpx;
    font-weight: 400;
    font-size: 40rpx;
    line-height: 56rpx;
    color: #404040;
}
.commodity-sort .sort-title .on{
    position: relative;
    font-weight: 600;
    line-height: 56rpx;
    color: #404040;
}
.commodity-sort .sort-title .on .line{
    position: absolute;
    width: 40rpx;
    height: 4rpx;
    background-color: #7A4AB7;
    bottom: -8rpx;
    left: 0;
    right: 0;
    margin: auto;
}
.components{
    margin-bottom: 32rpx;
    background: #FFFFFF;
    
}
.statement-title{
    font-weight: 300;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #7F7F7F;
    margin-bottom: 48rpx;
  }
.notData{
    width: 100%;
    text-align: center;
    color: #999999;
    margin-bottom: 80rpx;
}