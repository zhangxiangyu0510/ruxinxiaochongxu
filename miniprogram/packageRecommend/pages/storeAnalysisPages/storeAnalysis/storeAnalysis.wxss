/* packageRecommend/pages/storeAnalysis/storeAnalysis.wxss */
.storeAnalysis{
  font-family: 'PingFang SC';
  font-style: normal;
  padding: 48rpx 32rpx 0;
  background-color: #fafafa;
}
.storeAnalysis .storeAnalysis-date{
  display: flex;
  align-items: flex-end;
  margin-bottom: 32rpx;
}
.statement-title{
  font-weight: 300;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #7F7F7F;
  margin-bottom: 48rpx;
}
.storeAnalysis .storeAnalysis-date .currentDate{
  width: 156rpx;
  height: 60rpx;
  background: rgba(115, 64, 179, 0.1);
  border-radius: 8rpx;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #7340B3;
  text-align: center;
  margin-right: 16rpx;
}
.storeAnalysis .storeAnalysis-date  .pickerDate{
  width: 96rpx;
}
.storeAnalysis .storeAnalysis-date .changeDate{
  /* width: 100%; */
  font-weight: 300;
  font-size: 24rpx;
  line-height: 34rpx;
  text-align: right;
  color: #4A4A4A;
}
.storeAnalysis-type{
  margin-bottom: 64rpx;
}
.storeAnalysis-type .type-title{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 32rpx;
}
.title-name{
  font-weight: 600;
  font-size: 40rpx;
  line-height: 56rpx;
  color: #404040;
}
.title-name-rate{
  margin-right: 8rpx;
}
.look-detail{
  font-weight: 300;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #4A4A4A;
}
.type-content{
  box-sizing: border-box;
  width: 100%;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
}
.type-content .content-title .content-title-top{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #808080;
  margin-bottom: 16rpx;
}
.content-title-top-people{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #808080;
}
.content-title-bottom{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #4A4A4A;
  margin-bottom: 28rpx;
}
.content-title-bottom-people{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #4A4A4A;
  margin-bottom: 16rpx;
}
.content-data{
  display: flex;
  justify-content: space-between;
}
.content-left{
  font-weight: 700;
  font-size: 40rpx;
  line-height: 72rpx;
  text-align: right;
  color: #7A4AB7;
}
.content-left-big{
  font-weight: 700;
  font-size: 72rpx;
  line-height: 72rpx;
  text-align: right;
  color: #7A4AB7;
}
.content-right{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  text-align: right;
  color: #808080;
}
.right-top{
  margin-bottom: 8rpx;
}
.right-top,.right-bottom{
  display: flex;
}
.img{
  position: relative;
  top: 5rpx;
  width: 24rpx;
  height: 24rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.chart{
    position: relative;
  width: 100%;
  height: 518rpx;
  margin: 48rpx auto 0;
}
.chart .chart-title{
    position: absolute;
    top: 243rpx;
    right: 295rpx;
    font-size: 28rpx;
    font-weight: 600;
    text-align: center;
    line-height: 35rpx;
}
.people-title{
    font-weight: 400;
}
.storeAnalysis-rate .rate-title{
  display: flex;
  align-items: flex-end;
  margin-bottom: 32rpx;
}
.rate-content{
  box-sizing: border-box;
  padding: 38rpx 32rpx 32rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}
.rate-content .content-title{
  font-weight: 400;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #4A4A4A;
  margin-bottom: 32rpx;
}
.rate-content .rate-data{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #404040;
}
.rate-content .rate-data .chart-annular{
  width: 200rpx;
  height: 200rpx;
  font-weight: 400;
}
.rate-content .rate-data .chart-annular canvas{
  width: 100%;
  height: 100%;
}
.rate-content .rate-data .data-number{
  font-family: 'Verlag';
  font-weight: 700;
  font-size: 68rpx;
  line-height: 82rpx;
  text-align: center;
  color: #7A4AB7;
  transform: matrix(1, 0, -0.01, 1, 0, 0);
}

