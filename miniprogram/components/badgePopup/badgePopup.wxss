/* components/badgePopup/badgePopup.wxss */
.toast{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: #00000050;
    z-index: 999;
    font-family: PingFang SC;
    font-style: normal;
}
.toast-content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);

}
.toast-content .close{
    display: flex;
    justify-content: flex-end;
    width: 100%;
    margin-bottom: 24rpx;
    /* background-color: red; */
}
.toast-content .close image{
    width: 32rpx;
    height: 32rpx
}
.toast-content .content{
    position: relative;
    width: 496rpx;
    height: 732rpx;
    background-color: #ffffff;
    border-radius: 16rpx;
    z-index: -2;
}
.content-img{
    width: 320rpx;
    height: 320rpx;
    margin: 0 auto 32rpx;
    padding-top: 48rpx;
    
}
.bgImg{
    position: absolute;
    left: 0;
    right: 0;
    z-index: -1;
    margin: auto;
    width: 416rpx;
    height: 416rpx;
    border-radius: 50%;
    background: url("data:image/svg+xml;base64,");
    background-position: center;
    transform: scale(1.2);
    background-repeat: no-repeat;
}
.content-img image{
    width: 100%;
    height: 100%;
    /* background-color: red; */
}
.theme-text{
    font-weight: 600;
    font-size: 48rpx;
    line-height: 68rpx;
    color: #404040;
    margin-bottom: 32rpx;
    text-align: center;
}
.negative-text{
    font-weight: normal;
    font-size: 28rpx;
    line-height: 40rpx;
    text-align: center;
    color: #888888;
    margin-bottom: 60rpx;
}
.button{
    width: 400rpx;
    height: 84rpx;
    background-color: #7340B3;
    border-radius: 8rpx;
    margin: 0 auto;
}
.button text{
    font-weight: 500;
    font-size: 28rpx;
    line-height: 84rpx;
    text-align: center;
    color: #FFFFFF;
}
.textCenter{
    text-align: center;
}