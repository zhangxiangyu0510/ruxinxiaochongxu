/* components/commonInfoList/commonInfoList.wxss */
.info-list{
    display: flex;
    background-color: #ffffff;
    padding: 32rpx 24rpx 32rpx 32rpx;
    border-radius: 16rpx;
    font-family: 'PingFang SC';
    font-style: normal;
}
.info-img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 8rpx;
    background-color: turquoise;
    margin-right: 24rpx;
}
.info-img image{
    width: 100rpx;
    height: 100%;
}
.info-detail{
    width: 100%;
}
.name-icon{
    display: flex;
    justify-content: space-between;
    margin-bottom: 8rpx;
}
.info-name{
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;

    color: #404040;
}
.info-icon{
    width: 146rpx;
    height: 52rpx;
}
.info-icon image{
    width: 100%;
    height: 100%;
}
.info-time{
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #404040;
}