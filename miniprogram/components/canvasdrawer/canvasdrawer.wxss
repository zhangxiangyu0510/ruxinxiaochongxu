.hintText{
  text-align: center;
  color: #ccc;
  height: 500rpx;
  line-height: 500rpx;
}
.sharePostersBox {
  position: fixed;
  top: 0;
  width: 100%;
  /* height: 100%; */
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99999;
  height: 100vh;
  /* text-align: center; */
}

.sharePosters {
  width: 496rpx;
  height: 750rpx;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

}
.sharePosters .closeIconBox {
  text-align: right;
  margin-bottom: 16rpx;
  position: relative;
  left: 5rpx;

}
.sharePosters .sharebut {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 48rpx;

}
.butItem{
  text-align: center;

}
.butItem button{
  width: auto;
  padding: 0;
  margin: 0;
  background-color: transparent;

}
.sharePosters .img_box{
  width: 100rpx;
  height: 100rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin: 0 auto;
  margin-bottom: 24rpx;
}
.sharePosters .but_text{
  /* width: 120rpx; */
  font-size: 24rpx;
  line-height: 34rpx;
  color: #FFFFFF;
}

.sharePosters .sharebut .share_img_box{

}

.sharePosters .sharebut .longString {
  position: relative;
  bottom: 28rpx;
  height: 52rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);

}

.btn-wrap {
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.btn-wrap .btn {
  height: 90rpx;
  width: 100%;
  color: #192841;
  background: linear-gradient(to right, #f8cd4e, #fae277);
  text-align: center;
  line-height: 90rpx;
  margin: 0;
  font-size: 28rpx;
}

.btn-wrap .btn::after {
  border: none;
}

.share-image {
  width: 496rpx;
  height: 732rpx;
  border-radius: 8px;
  display: inherit;

  /* border: 1px solid black; */
}

