.toast_content_box {  
    display: flex;  
    width: 100%;  
    height: 100%;
    align-items: center;
    z-index: 9999;
    position: fixed;
    top: 0;
    pointer-events: none;
  }  
  .toast_content {
    width: 50%;
    padding: 10px;
    margin: 0 auto;
    background: rgba(0,0,0,.6);  
    border-radius: 5px;  
  }  
  .toast_content_text {  
    height: 100%;  
    width: 100%;  
    color: #fff;  
    font-size: 25rpx;  
    text-align: left;
    word-wrap: break-word;
  } 