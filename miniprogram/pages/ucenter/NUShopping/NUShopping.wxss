.NUShopping .tab-item {

  padding: 22rpx 32rpx;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 46rpx;
  text-align: center;
  color: #7F7F7F;
  mix-blend-mode: normal;

}

.NUShopping .weui-tabs-bar__item {
  background-color: #fcfcfc !important;
}

.NUShopping .weui-tabs-bar__content {
  background-color: #fcfcfc;

}

.NUShopping .weui-tabs-swiper {
  display: none;
}

.NUShopping .tab-bar-title__selected {
  /* border-bottom: 4rpx solid #FF5E00; */
  border-bottom-color: transparent !important;
  font-weight: 600;
  font-size: 40rpx;
  line-height: 56rpx;
  /* identical to box height */
  text-align: center;
  /* 标题文字 */
  color: #404040;
  mix-blend-mode: normal;

}
.myChange  .weui-tabs-bar__title{
  padding-left: 0;
}

.tab-bar-title__selected::after {
  content: '';
  width: 40rpx;
  height: 4rpx;
  display: block;
  margin: 0 auto;
  border-bottom: 4rpx solid #7340B3;
  position: relative;
  /* top: 10rpx; */
}

.allBut {
  display: flex;
  align-items: center;
  width: 174rpx;
  padding: 12rpx 0;
  background: #F1ECF7;
  border-radius: 4px;
  margin-top: 10rpx;

}


.allBut .allgoods {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #7340B3;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.allBut .iconBox {
  width: 20rpx;
  height: 11rpx;
}

.NUgoodsbox {
  margin-top: 32rpx;
}

.NUgoodsbox .NUGoodsItem {
  background-color: #ffffff;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  margin-bottom: 32rpx;
}

.NUgoodsbox .NUGoodsItem .leftImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.NUgoodsbox .NUGoodsItem .rightGoodsInfo {
  margin-left: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.NUGoodsItem .rightGoodsInfo  .operation{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;

}

.NUgoodsbox .NUGoodsItem  .rightGoodsInfo .name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #4A4A4A;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}


.NUgoodsbox .numbreBox .quantity {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #4A4A4A;

}

.NUgoodsbox .numbreBox .number {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #7340B3;
  margin: 0px 8rpx;
}

.NUgoodsbox .numbreBox .grade {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #808080;
}
.NUgoodsbox  .viewDetails{
  background: #7340B3;
  border-radius: 8rpx;
  padding: 10rpx 12rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #FFFFFF;

}