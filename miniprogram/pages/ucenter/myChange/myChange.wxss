.NUgoodsbox {
  margin-top: 32rpx;
}

.NUgoodsbox .NUGoodsItemContent {
  display: flex;
}

.NUgoodsbox .NUGoodsItemContent .leftImg {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.NUgoodsbox .NUGoodsItemContent .rightGoodsInfo {
  margin-left: 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.NUgoodsbox  .operation {
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.NUgoodsbox .NUGoodsItemContent .rightGoodsInfo .name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #4A4A4A;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.NUgoodsbox .numbreBox .quantity {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #4A4A4A;

}

.NUgoodsbox .numbreBox .number {
  font-size: 28rpx;
  line-height: 32rpx;
  color: #7340B3;
  margin: 0px 8rpx;
}

.NUgoodsbox .numbreBox .grade {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #808080;
}

.NUgoodsbox .viewDetails {
  background: #F1ECF7;
  border-radius: 8rpx;
  padding: 10rpx 12rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #7340B3;

}

.NUgoodsbox .viewDetailsTwo {
  font-size: 24rpx;
  line-height: 34rpx;
  /* identical to box height */
  text-align: right;
  color: #888888;
}

