.myChange .tab-item {
  padding: 22rpx 0;
  margin-right: 64rpx;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 46rpx;
  text-align: center;
  color: #7F7F7F;
  mix-blend-mode: normal;

}

.myChange .weui-tabs-bar__item {
  background-color: #fcfcfc !important;
  padding-left: 0rpx;

}

.myChange .weui-tabs-bar__content {
  background-color: #fcfcfc;

}

.myChange .weui-tabs-swiper {
  display: none;
}

.myChange .weui-tabs-bar__content:nth-child(1) .weui-tabs-bar__title {
  padding-left: 0;
}

.myChange .tab-bar-title__selected {
  /* border-bottom: 4rpx solid #FF5E00; */
  border-bottom-color: transparent !important;
  font-weight: 600;
  font-size: 40rpx;
  line-height: 56rpx;
  /* identical to box height */
  text-align: center;
  /* 标题文字 */
  color: #404040;
  mix-blend-mode: normal;

}

.tab-bar-title__selected::after {
  content: '';
  width: 40rpx;
  height: 4rpx;
  display: block;
  margin: 0 auto;
  border-bottom: 4rpx solid #7340B3;
  position: relative;
  /* top: 10rpx; */
}

