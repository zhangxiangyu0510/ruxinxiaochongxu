/* pages/ucenter/commodityDetails/commodityDetails.wxss */
.commodityDetails {
  padding: 48rpx 32rpx;
  background-color: #fcfcfc;
}

.commodityDetails .topButs .picker .but {
  background: #7340B3;
  border-radius: 4px;
  padding: 12rpx 20rpx;
  color: #FFFFFF;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;

}

.commodityDetails .topButs .picker .cutText {
  font-family: PingFang SC;
  font-style: normal;
  font-size: 24rpx;
  text-align: right;
  color: #4A4A4A;
  margin-left: 16rpx;
}

.commodityDetails .topButs .allBut {
  background: rgba(122, 74, 183, 0.1);
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  color: #7340B3;
}

.commodityDetails .title {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: 600;
  font-size: 40rpx;
  color: #404040;
  margin-top: rpx;
  margin-bottom: 32rpx;

}




.commodityDetails .shoppData .shoppItem {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  margin-top: 48rpx;
}

.commodityDetails .shoppData .picture {
  width: 200rpx;
  height: 200rpx;
  background-color: #ccc;
  border-radius: 16rpx;

}

.commodityDetails .shoppData .shoppname {
  margin-left: 24rpx;
  position: relative;
}

.commodityDetails .shoppData .shoppname .name {
  width: 398rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-size: 26rpx;
  color: #4A4A4A;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.commodityDetails .shoppData .tpyeBut {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  color: #808080;
  width: 398rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  position: absolute;
  bottom: 0;
}

.commodityDetails .fans {
  margin-top: 42rpx;
  text-align: center;
  margin-bottom: 6rpx;

}

.commodityDetails .fans .number {
  font-family: Verlag;
  font-style: normal;
  font-weight: bold;
  font-size: 72rpx;
  color: #7A4AB7;
  margin-bottom: 8rpx;
}

.commodityDetails .fans .nameText {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 28rpx;
  color: #4A4A4A;
}

.commodityDetails .clientData {
  margin-top: 32rpx;
}

.commodityDetails .clientData .clientItem {
  margin-bottom: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
}

.commodityDetails .clientData .clientItem .userPicture {
  width: 100rpx;
  height: 100rpx;
  background-color: #ccc;
  border-radius: 8rpx;
  margin-right: 24rpx;

}
.commodityDetails .clientData .clientItem .nickname{
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.commodityDetails .clientData .clientItem .nickname .name {
  font-family: PingFang SC;
  font-style: normal;
  font-size: 32rpx;
  color: #333333;
}

.commodityDetails .clientData .clientItem .nickname .number {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  color: #333333;
  /* margin-top: 22rpx; */
}
.commodityDetails .clientData .clientItem .rightIcon{
  width: 146rpx;
  height: 52rpx;
  background-color: #ccc;

}
.commodityDetails .clientData .clientItem .rightIcon img{
  height: 52rpx;
}


